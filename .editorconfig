root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2

[*.{css,scss,sass}]
indent_style = tab

[*.{js,jsx,ts,tsx}]
indent_style = tab
